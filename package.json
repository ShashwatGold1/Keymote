{
  "name": "keymote",
  "version": "1.0.0",
  "description": "Turn your phone into a wireless keyboard & mouse for your computer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:portable": "electron-builder --win portable"
  },
  "keywords": [
    "remote",
    "keyboard",
    "input",
    "electron"
  ],
  "author": "Keymote",
  "license": "MIT",
  "build": {
    "appId": "com.keymote.app",
    "productName": "Keymote",
    "copyright": "Copyright Â© 2024 Keymote",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!mobile/**/*",
      "!keymote-app/**/*",
      "!dist/**/*",
      "!*.md",
      "!.git/**/*"
    ],
    "extraResources": [
      {
        "from": "mobile",
        "to": "mobile",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Keymote"
    },
    "portable": {
      "artifactName": "Keymote-Portable-${version}.exe"
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "bonjour-service": "^1.2.1",
    "node-forge": "^1.3.3",
    "qrcode": "^1.5.3",
    "selfsigned": "^5.4.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
